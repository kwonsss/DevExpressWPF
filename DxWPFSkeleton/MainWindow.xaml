<dx:ThemedWindow 
    x:Class="DXWPFSkeleton.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:DXWPFSkeleton.Views"    
    Title="MainWindow" Height="1080" Width="1920" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Views:HomeView Grid.Row="0" />
        <Views:SettingView Grid.Row="1" StopButtonCommand="{Binding Path=DataContext.StopCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
    </Grid>
</dx:ThemedWindow>
