<dx:ThemedWindow 
    x:Class="DXMenu.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"   
    xmlns:pages="clr-namespace:DXMenu.Pages"
    Title="MainWindow" Height="800" Width="1000">
    <Window.Resources>
        <!-- 각 페이지에 대한 DataTemplate 정의 -->
        <DataTemplate x:Key="HomePageTemplate">
            <pages:HomePage />
        </DataTemplate>

        <DataTemplate x:Key="UsersPageTemplate">
            <pages:UserPage/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <!--https://docs.devexpress.com/WPF/DevExpress.Xpf.WindowsUI.HamburgerMenu-->
        <dxwui:HamburgerMenu OpenPaneWidth="250" >
            <dxwui:HamburgerMenu.Items>
                <dxwui:HamburgerMenuNavigationButton Glyph="{dx:DXImage SvgImages/Actions/New.svg}" AllowGlyphTheming="True" Content="Home" Tag="Home"  IsDefault="True"/>
                <dxwui:HamburgerMenuNavigationButton Glyph="{dx:DXImage SvgImages/Actions/New.svg}" AllowGlyphTheming="True" Content="Users" Tag="Users"/>
            </dxwui:HamburgerMenu.Items>
            <dxwui:HamburgerMenu.ContentTemplate>
                <DataTemplate>
                    <ContentControl>
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=dxwui:HamburgerMenu}, Path=SelectedItem.Tag}" Value="Home">
                                        <Setter Property="ContentTemplate" Value="{StaticResource HomePageTemplate}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=dxwui:HamburgerMenu}, Path=SelectedItem.Tag}" Value="Users">
                                        <Setter Property="ContentTemplate" Value="{StaticResource UsersPageTemplate}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </DataTemplate>
            </dxwui:HamburgerMenu.ContentTemplate>
        </dxwui:HamburgerMenu>
        
    </Grid>
</dx:ThemedWindow>
